<style>
  .client-details {
  background-color: #f4f4f4;
  border: 1px solid #ccc;
  padding: 15px;
  margin-bottom: 20px;
  border-radius: 5px;
}

.client-detail {
  margin-bottom: 10px;
}

.client-detail strong {
  margin-right: 5px;
}
</style>




<div id="<%= dom_id client %>" class="client-details">
  <p class="client-detail">
    <strong>Nom:</strong>
    <%= client.nom %>
  </p>

  <p class="client-detail">
    <strong>Adresse:</strong>
    <%= client.adresse %>
  </p>

  <p class="client-detail">
    <strong>Téléphone:</strong>
    <%= client.telephone %>
  </p>
</div>

